<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:clipChildren="false"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    tools:context=".activities.DetalheFilmeActivity">
    <ImageView
        android:id="@+id/imageview_filme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/poster" />

    <ImageView
        android:id="@+id/imageview_voltar_filmetolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_arrow_back" />
    <ImageView
        android:id="@+id/imageview_compartilhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_share" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        style="@style/LinearLayoutDetalhesStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview_nomefilme"
                style="@style/DetalheTextView"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Nome Filme"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                style="@style/DetalheTextView"
                android:id="@+id/textview_duracaofilme"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Duração"/>
            <TextView
                style="@style/DetalheTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textColor="@color/colorRed"
                android:text="⬤"/>
            <TextView
                style="@style/DetalheTextView"
                android:id="@+id/textview_statusfilme"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Status"/>
            <TextView
                style="@style/DetalheTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textColor="@color/colorRed"
                android:text="⬤"/>
            <TextView
                style="@style/DetalheTextView"
                android:id="@+id/textview_lancamentofilme"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Lançamento"/>
            <TextView
                style="@style/DetalheTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textColor="@color/colorRed"
                android:text="⬤"/>
            <TextView
                style="@style/DetalheTextView"
                android:id="@+id/textview_notafilme"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="x,x/5"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/root_descricaofilme"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/LinearLayoutStyle">
                <TextView
                    style="@style/DetalheTextView"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="Sinopse"/>
                <TextView
                    android:id="@+id/textview_descricaofilme"
                    style="@style/DetalheTextView"
                    android:animateLayoutChanges="true"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="fill_horizontal"
                    android:text="blablablablablablabla"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/LinearLayoutStyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <CheckBox
                        style="@style/DetalheTextView"
                        android:id="@+id/checkBox1"
                        android:text="Assistido no Cinema?"
                        android:textSize="16sp"
                        android:layoutDirection="rtl"
                        android:buttonTint="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-5dp"/>
                    <CheckBox
                        style="@style/DetalheTextView"
                        android:id="@+id/checkBox2"
                        android:text="Dormiu?"
                        android:textSize="16sp"
                        android:layoutDirection="rtl"
                        android:buttonTint="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-5dp"/>
                    <CheckBox
                        style="@style/DetalheTextView"
                        android:id="@+id/checkBox3"
                        android:text="Chorou?"
                        android:textSize="16sp"
                        android:layoutDirection="rtl"
                        android:buttonTint="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-5dp"/>
                    <CheckBox
                        style="@style/DetalheTextView"
                        android:id="@+id/checkBox4"
                        android:text="Favorito?"
                        android:textSize="16sp"
                        android:layoutDirection="rtl"
                        android:buttonTint="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-5dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/LinearLayoutStyle">
                <TextView
                    style="@style/DetalheTextView"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Data: "
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/edittext_data"
                    style="@style/DetalheTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorTransparent"
                    android:inputType="date"
                    android:focusable="false" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_button_red"
            android:text="Salvar"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="normal" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardview_detalheposter_filme"
        android:visibility="invisible"
        style="@style/CardViewPoster">
        <ImageView
            android:id="@+id/imageview_detalheposter_filme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster" />
    </androidx.cardview.widget.CardView>
</FrameLayout>