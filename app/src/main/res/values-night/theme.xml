<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:navigationBarColor">#00000000</item>
        <item name="logo">@drawable/nome_escuro</item>
        <item name="tabStyle">@style/AppThemeNight.TabLayout</item>
        <item name="cardViewStyle">@style/AppThemeNight.CardView</item>


    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="SearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textColorPrimary">#BDBDBD</item>
        <item name="android:editTextColor">#BDBDBD</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:tint">#BDBDBD</item>
    </style>
    <style name="AppThemeNight.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorRed</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="singleLine">true</item>
    </style>
    <style name="AppThemeNight.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/colorBlack</item>
    </style>
    <style name="CardTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:background">@drawable/custom_cardview_night</item>
    </style>
    <style name="ImgCardViewStyle">
        <item name="android:background">@drawable/custom_right_img_night</item>
    </style>

</resources>