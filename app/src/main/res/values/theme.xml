<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="logo">@drawable/nome_claro</item>
        <item name="tabStyle">@style/AppThemeDay.TabLayout</item>
        <item name="cardViewStyle">@style/AppThemeDay.CardView</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textColorPrimary">#BDBDBD</item>
        <item name="android:editTextColor">#BDBDBD</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:tint">#BDBDBD</item>
    </style>

    <style name="AppThemeDay.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorRed</item>
        <item name="tabTextColor">@color/colorBlack</item>
        <item name="singleLine">true</item>
    </style>

    <style name="AppThemeDay.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/colorWhite</item>
    </style>

    <style name="CardTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:background">@drawable/custom_cardview_day</item>
    </style>

    <style name="LinearLayoutDetalhesStyle">
        <item name="android:background">@drawable/custom_view_detalhe_day</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="DetalheTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:buttonTint">@color/colorBlack</item>
    </style>

    <style name="ImgCardViewStyle">
        <item name="android:background">@drawable/custom_right_img_day</item>
    </style>


</resources>